---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Button.astro";
---

<Layout title="Welcome to Astro.">
  <main class="z-10 flex items-center justify-center flex-col h-full">
    <div class="h-full flex items-center justify-center flex-col gap-5">
      <h1
        class="bg-gradient-to-b from-slate-50 to-zinc-700 bg-clip-text text-transparent text-center text-8xl font-bold uppercase"
      >
        web development resources
      </h1>
      <nav class="flex gap-8 flex-wrap justify-center">
        <Badge title="CSS" href="/css" /><Badge
          title="TAILWIND"
          href="/tailwind"
        /><Badge title="SVG&&ICONS" href="/svg-icons" /><Badge
          title="FONTS"
          href="/fonts"
        /><Badge title="IA" href="/ia" />
      </nav>
    </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    height: 100vh;
  }
</style>
